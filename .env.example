# Server Configuration
LOCAL=true
FAKE_AI=false
PORT=3000
HOST=0.0.0.0
SUNDAY_NAME=Sunday
RUST_LOG=debug

# API Authentication (required)
API_KEY_ONE=very-secure-one
API_KEY_TWO=very-secure-two

# CORS Configuration
# Use "*" for development to allow all origins
# For production, specify comma-separated list of allowed origins
# Example: CORS_ALLOWED_ORIGINS=https://example.com,https://app.example.com
CORS_ALLOWED_ORIGINS=*

# Database (required for real AI)
DATABASE_URL=postgresql://sunday:sunday_password@localhost:5432/sunday

# Azure OpenAI Configuration (required when FAKE_AI=false)
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_API_VERSION=2024-08-01-preview
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-small
